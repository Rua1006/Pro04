<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<select id="memberList" resultType="com.hami.dto.MemberDTO">
		select * from member
	</select>
	<select id="getMember" resultType="com.hami.dto.MemberDTO">
		select * from member where id=#{id}
	</select>
	<insert id="memberInsert">
		insert into member values(#{id}, #{pw}, #{name}, #{email}, #{tel}, sysdate)
	</insert>
	<update id="memberEdit">
		update member set pw=#{pw}, name=#{name}, email=#{email}, tel=#{tel} where id=#{id}
	</update>
</mapper>
